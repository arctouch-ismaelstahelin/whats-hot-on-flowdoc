{
  "manifest_version": 2,
  "name": "What's Hot on Flowdoc",
  "version": "0.0.1",
	"author": "Ismael Stahelin",
  "description": "Show the number of messages on the flows during today",
  "permissions": [
    "storage",
    "https://*.flowdock.com/*"
	],
  "icons": {
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"browser_action": {
		"default_icon": "images/icon-128.png",
    "default_title": "What's Hot on Flowdoc",
    "default_popup": "popup.html"
	},
	"options_page": "options.html"
}
